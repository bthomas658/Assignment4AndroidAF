<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserPreferences">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="359dp"
        android:layout_height="490dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="34dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".UserPreferences">

        <EditText
            android:id="@+id/userInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:autofillHints="string"
            android:hint="@string/enter_a_string"
            android:inputType="text|textCapWords|textAutoCorrect"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/userInput2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userInput"
            android:layout_alignEnd="@+id/userInput"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/userInput"
            android:autofillHints="string"
            android:hint="@string/enter_a_string"
            android:inputType="text|textCapWords|textAutoCorrect"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/userInput3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userInput2"
            android:layout_alignEnd="@+id/userInput"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/userInput"
            android:autofillHints="string"
            android:hint="@string/enter_a_string"
            android:inputType="text|textCapWords|textAutoCorrect"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/userInput4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userInput3"
            android:layout_alignEnd="@+id/userInput"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/userInput"
            android:autofillHints="string"
            android:hint="@string/enter_a_string"
            android:inputType="text|textCapWords|textAutoCorrect"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userInput4"
            android:layout_alignParentStart="true"
            android:text="@string/save_button" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>